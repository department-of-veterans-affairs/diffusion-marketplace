<div id="dm-nominate-a-practice-page" class="grid-container">
  <%= render partial: "shared/messages", locals: { small_text: true } %>

  <section class="margin-top-8 margin-bottom-0 margin-top-128-desktop desktop:margin-bottom-8" role="region" aria-label="Nominate an innovation information">
    <div class="grid-row grid-col-12 desktop:grid-col-8">
      <h1 class="usa-prose-h1 margin-top-0 margin-bottom-4">Nominate an innovation</h1>
      <p class="usa-prose-body">
        VA staff and collaborators are welcome to nominate active innovations for consideration on the Diffusion Marketplace using the form below.
      </p>
    </div>
  </section>

  <section class="grid-row" role="region" aria-label="Nominate an innovation contact form">
    <div class="grid-col-12 desktop:grid-col-8">
      <%= render partial: 'shared/email_form', locals: { path: nominate_an_innovation_path, additional_label_text: 'Please include information about where your innovation is being implemented.' } %>
    </div>
  </section>
</div>
