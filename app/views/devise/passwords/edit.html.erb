<!-- Change your password Page -->
<div class="x0-top">
  <section class="usa-section dm-background-linear-gradient-up-dark-blue" style="min-height: calc(100vh - 286px)">
    <div class="grid-container">
      <div class="login-card box-shadow-card">
        <%= render "devise/shared/login_header" %>
        <div class="login-body">
          <h2>Change your password</h2>

          <%= form_for(resource, as: resource_name, url: password_path(resource_name), html: {method: :put, class: 'usa-form x1-top'}) do |f| %>
            <% if devise_error_messages!.present? %>
              <div class="usa-alert usa-alert-error" >
                <div class="usa-alert__body">
                  <%= devise_error_messages! %>
                </div>
              </div>
            <% end %>
            <%= f.hidden_field :reset_password_token %>

            <div class="field">
              <%= f.label :password, "New password" %><br/>
              <% if @minimum_password_length %>
                <em>(<%= @minimum_password_length %> characters minimum)</em><br/>
              <% end %>
              <%= f.password_field :password, autofocus: true, autocomplete: "new-password", required: true %>
            </div>

            <div class="field">
              <%= f.label :password_confirmation, "Confirm new password", class: 'usa-label x0 x1-top' %><br/>
              <%= f.password_field :password_confirmation, autocomplete: "off", class: 'usa-button dm-btn-primary', required: true %>
            </div>

            <div class="actions display-flex justify-center x1-top">
              <%= f.submit "Change my password", class: 'usa-button dm-btn-primary' %>
            </div>
          <% end %>

          <%= render "devise/shared/links" %>
        </div>
      </div>
    </div>
  </section>
</div>
