<div class="grid-row padding-x-3 padding-bottom-0 desktop:padding-x-0">
  <fieldset class="p0">
    <legend class="usa-sr-only">Originating Facility Filter</legend>
    <div class="bg-gray-5 margin-bottom-1 desktop:margin-bottom-0 desktop:padding-bottom-2px">
      <h2 class="usa-accordion__heading">
        <button class="usa-accordion__button mobile-origin-accordion desktop:display-none"
                aria-expanded="false"
                type="button">
          Originating facility
        </button>
      </h2>

      <div class="grid-row originating-facility-container display-none desktop:padding-bottom-3 desktop:display-block desktop:padding-x-2">
        <p class="text-bold line-height-26 margin-top-2 margin-bottom-1 grid-col-12 display-none desktop:display-block">Originating location</p>
        <%= render partial: 'practices/search_partials/visn_facility_combo_box', locals: {facility_type_selector: 'originating-facility-and-visn-select'} %>
      </div>
    </div>
  </fieldset>

  <fieldset class="p0">
    <legend class="usa-sr-only">Adopting Facility Filter</legend>
    <div class="bg-gray-5 margin-bottom-1 desktop:margin-bottom-0 desktop:padding-bottom-2px">
      <h2 class="usa-accordion__heading">
        <button class="usa-accordion__button mobile-adopting-accordion desktop:display-none"
                aria-expanded="false"
                type="button">
          Adopting facility
        </button>
      </h2>

      <div class="grid-row adopting-facility-container display-none desktop:padding-bottom-3 desktop:display-block desktop:padding-x-2">
        <p class="text-bold line-height-26 margin-top-2 margin-bottom-1 grid-col-12 display-none desktop:display-block">Adopting location</p>
        <%= render partial: 'practices/search_partials/visn_facility_combo_box', locals: {facility_type_selector: 'adopting-facility-and-visn-select'} %>
      </div>
    </div>
  </fieldset>

  <%
    clinical_category = Category.where(name: 'Clinical', parent_category_id: nil).first
    clinical_categories = Category.where(is_other: false, parent_category_id: clinical_category.id).where.not(name: 'Other').order(Arel.sql('LOWER(name) ASC')).uniq
    if clinical_categories.count > 1
      # Divide the total by three and round up if possible to make sure the categories are evenly distributed amongst the columns
      clinical_count = ((clinical_categories.count * 2) + 3) / (3 * 2)
      clinical_sliced_categories = clinical_categories.each_slice(clinical_count).to_a

      # When the category count is divisible by 3 with a remainder of 1, move item(s) from one array to the previous to maintain distribution
      if clinical_categories.count % 3 == 1
        clinical_sliced_categories[2].insert(-1, clinical_sliced_categories[3][0])
        clinical_sliced_categories[1].insert(-1, clinical_sliced_categories[2][0], clinical_sliced_categories[2][1])
        clinical_sliced_categories[0].insert(-1, clinical_sliced_categories[1][0])
        clinical_sliced_categories[2].shift(2)
        clinical_sliced_categories[1].shift
      end
    end

    operational_category = Category.where(name: 'Operational', parent_category_id: nil).first
    operational_categories = Category.where(is_other: false, parent_category_id: operational_category.id).where.not(name: 'Other').order(Arel.sql('LOWER(name) ASC')).uniq
    if operational_categories.count > 1
      # Divide the total by three and round up if possible to make sure the categories are evenly distributed amongst the columns
      operational_count = ((operational_categories.count * 2) + 3) / (3 * 2)
      operational_sliced_categories = operational_categories.each_slice(operational_count).to_a

      # When the category count is divisible by 3 with a remainder of 1, move item(s) from one array to the previous to maintain distribution
      if operational_categories.count % 3 == 1
        operational_sliced_categories[2].insert(-1, operational_sliced_categories[3][0])
        operational_sliced_categories[1].insert(-1, operational_sliced_categories[2][0], operational_sliced_categories[2][1])
        operational_sliced_categories[0].insert(-1, operational_sliced_categories[1][0])
        operational_sliced_categories[2].shift(2)
        operational_sliced_categories[1].shift
      end
    end


    strategic_category = Category.where(name: 'Strategic', parent_category_id: nil).first
    strategic_categories = Category.where(is_other: false, parent_category_id: strategic_category.id).where.not(name: 'Other').order(Arel.sql('LOWER(name) ASC')).uniq
    if strategic_categories.count > 1
      # Divide the total by three and round up if possible to make sure the categories are evenly distributed amongst the columns
      strategic_count = ((strategic_categories.count * 2) + 3) / (3 * 2)
      strategic_sliced_categories = strategic_categories.each_slice(strategic_count).to_a

      # When the category count is divisible by 3 with a remainder of 1, move item(s) from one array to the previous to maintain distribution
      if strategic_categories.count % 3 == 1
        strategic_sliced_categories[2].insert(-1, strategic_sliced_categories[3][0])
        strategic_sliced_categories[1].insert(-1, strategic_sliced_categories[2][0], strategic_sliced_categories[2][1])
        strategic_sliced_categories[0].insert(-1, strategic_sliced_categories[1][0])
        strategic_sliced_categories[2].shift(2)
        strategic_sliced_categories[1].shift
      end
    end
    debugger
  %>

  <fieldset class="p0">
    <legend class="usa-sr-only">Category Filter</legend>
    <div class="bg-gray-5 <%= clinical_categories.any? ? 'desktop:padding-bottom-2px' : '' %>">
      <h2 class="usa-accordion__heading">
        <button class="usa-accordion__button mobile-category-accordion desktop:display-none"
                aria-expanded="false"
                type="button">
          Category
        </button>
      </h2>

      <% if clinical_categories.any? %>
        <div class="grid-row category-container display-none padding-top-2 desktop:padding-bottom-1 desktop:padding-top-0 desktop:display-flex desktop:padding-x-2">
          <p class="text-bold line-height-26 margin-y-2 grid-col-12 display-none desktop:display-block margin-top-2">
            Categories
            <%= render partial: 'shared/complexity_definitions_modal', locals: { hide_modal_on_initial_load: true } %>
          </p>
          <p class="line-height-26 margin-y-2 grid-col-12 display-none desktop:display-block desktop:margin-top-1">Clinical</p>
          <% if clinical_sliced_categories.present? %>
            <%= render partial: 'practices/search_partials/category_filter_column', locals: { categories: clinical_sliced_categories, column: 0 } %>
            <% if clinical_sliced_categories[1].present? %>
              <%= render partial: 'practices/search_partials/category_filter_column', locals: { categories: clinical_sliced_categories, column: 1 } %>
            <% end %>
            <% if clinical_sliced_categories[2].present? %>
              <%= render partial: 'practices/search_partials/category_filter_column', locals: { categories: clinical_sliced_categories, column: 2 } %>
            <% end %>
          <% elsif clinical_sliced_categories.nil? && clinical_categories.count == 1 %>
            <%= render partial: 'practices/search_partials/category_filter_column', locals: { categories: clinical_categories, column: nil } %>
          <% end %>
        </div>
      <% end %>

      <!--- operational ----------------------------->
      <% if operational_categories.any? %>
        <div class="grid-row category-container display-none padding-top-2 desktop:padding-bottom-1 desktop:padding-top-0 desktop:display-flex desktop:padding-x-2">
          <p class="line-height-26 margin-y-2 grid-col-12 display-none desktop:display-block desktop:margin-top-1">Operational</p>
          <% if operational_sliced_categories.present? %>
            <%= render partial: 'practices/search_partials/category_filter_column', locals: { categories: operational_sliced_categories, column: 0 } %>
            <% if operational_sliced_categories[1].present? %>
              <%= render partial: 'practices/search_partials/category_filter_column', locals: { categories: operational_sliced_categories, column: 1 } %>
            <% end %>
            <% if operational_sliced_categories[2].present? %>
              <%= render partial: 'practices/search_partials/category_filter_column', locals: { categories: operational_sliced_categories, column: 2 } %>
            <% end %>
          <% elsif operational_sliced_categories.nil? && operational_categories.count == 1 %>
            <%= render partial: 'practices/search_partials/category_filter_column', locals: { categories: operational_sliced_categories, column: nil } %>
          <% end %>
        </div>
      <% end %>

      <!-----------------------Strategic --------------------------------------------------------------->
      <%# if strategic_categories.any? %>
        <%# debugger %>
<!--        <div class="grid-row category-container display-none padding-top-2 desktop:padding-bottom-1 desktop:padding-top-0 desktop:display-flex desktop:padding-x-2">-->
<!--          <p class="line-height-26 margin-y-2 grid-col-12 display-none desktop:display-block desktop:margin-top-1">Strategic</p>-->
          <%# if strategic_categories[0].present? %>
            <%#= render partial: 'practices/search_partials/category_filter_column', locals: { categories: strategic_categories, column: 0 } %>
            <%# if strategic_categories[1].present? %>
              <%#= render partial: 'practices/search_partials/category_filter_column', locals: { categories: strategic_categories, column: 1 } %>
            <%# end %>
            <%# if strategic_categories[2].present? %>
              <%#= render partial: 'practices/search_partials/category_filter_column', locals: { categories: strategic_categories, column: 2 } %>
            <%# end %>
          <%# elsif strategic_categories.nil? && strategic_categories.count == 1 %>
            <%#= render partial: 'practices/search_partials/category_filter_column', locals: { categories: strategic_categories, column: nil } %>
          <%# end %>
<!--        </div>-->
      <%# end %>
    </div>
  </fieldset>
</div>
