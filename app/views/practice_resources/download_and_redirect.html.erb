<div class="grid-container">
  <div class="grid-row">
    <div class="grid-col-8 grid-offset-2">
      <div class="usa-prose text-center usa-section">
        <% if session[:download_info].present? %>
          <p>Your download should begin shortly. It will either open in a new tab or appear in your browser's downloads folder.</p> 
          <a href="<%= session[:download_info]['download_url'] %>" target="_blank" rel="noopener noreferrer">try downloading again.</a></p>
          <p><a href="<%= session[:download_info]['practice_path'] %>">Visit the <%= session[:download_info]['practice_name'] %> page</a> where the original download link can be found.</p>

          <script type="text/javascript">
            window.onload = function() {
              const fullUrl = `<%= session[:download_info]['download_url'].html_safe %>`;
              window.open(fullUrl, '_blank');
            };
          </script>
        <% else %>
          <p>Download not available.</p>
        <% end %>
      </div>
    </div>
  </div>
</div>
