<!-- Use the accurate heading level to maintain the document outline -->
<button id="add_adoption_button" class="usa-button--outline dm-btn-primary new line-height-sans-3 margin-bottom-3">
<!--        aria-expanded="<%#= params[:created] || params[:exists] ? 'true' : 'false' %>"-->
<!--        aria-controls="a0">-->
  Add new adoption
</button>
<div <%# id="a0"%> class="usa-accordion__content usa-prose display-none">
  <% if params[:created] %>
    <div class="usa-alert usa-alert--info x1-bottom" role="alert">
      <div class="usa-alert__body">
        <h3 class="usa-alert__heading">Success!</h3>
        <p class="usa-alert__text">Adoption entry was successfully created.</p>
      </div>
    </div>
  <% end %>
  <% if params[:exists] %>
    <%= render partial: 'existing_adoption_warning', locals: {facility: params[:exists]} %>
  <% end %>
  <!-- New/Create Adoption form -->
  <%= render partial: 'adoption_form' %>
</div>
<!-- start repeatable -->
<%= render partial: 'adoptions_list' %>