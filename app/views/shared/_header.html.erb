<header class="usa-header usa-header--extended bg-primary-darker">
  <a class="usa-skipnav" href="#main-content">Skip to main content</a>
  <div class="usa-banner">
    <div class="usa-accordion">
      <div class="usa-banner__header  text-normal">
        <div class="usa-banner__inner flex-align-center">
          <div class="grid-col-auto">
            <img class="usa-banner__header-flag" src="<%= image_url 'uswds/us_flag_small.png' %>" alt="U.S. flag">
          </div>
          <div class="grid-col-fill tablet:grid-col-auto">
            <p class="usa-banner__header-text font-sans-4xs line-height-sans-205">An official website of the United States government</p>
          <%#  <p class="usa-banner__header-action" aria-hidden="true">Here’s how you know</p>%>
          </div>
          <%#<button id="banner-button" class="usa-accordion__button usa-banner__button"
                  aria-expanded="false" aria-controls="gov-banner">
            <span class="usa-banner__button-text">Here’s how you know</span>
          </button>%>
        </div>
      </div>
      <div class="usa-banner__content usa-accordion__content" id="gov-banner" hidden>
        <div class="grid-row grid-gap-lg">
          <div class="usa-banner__guidance tablet:grid-col-6">
            <img class="usa-banner__icon usa-media-block__img" src="<%= image_url 'uswds/icon-dot-gov.svg' %>" alt="Dot gov">
            <div class="usa-media-block__body">
              <p>
                <strong>The .gov means it’s official.</strong>
                <br>
                Federal government websites often end in .gov or .mil. Before sharing sensitive information, make sure
                you’re on a federal government site.
              </p>
            </div>
          </div>
          <div class="usa-banner__guidance tablet:grid-col-6">
            <img class="usa-banner__icon usa-media-block__img" src="<%= image_url 'uswds/icon-https.svg' %>" alt="Https">
            <div class="usa-media-block__body">
              <p>
                <strong>The site is secure.</strong>
                <br>
                The <strong>https://</strong> ensures that you are connecting to the official website and that any
                information you provide is encrypted and transmitted securely.
              </p>
            </div>
          </div>
        </div>
      </div>
    </div>
  </div>

  <div class="usa-overlay"></div>

  <div class="usa-navbar bg-primary-darker text-white grid-container text-bold">
    <div class="grid-row flex-align-center height-10">
    <div class="usa-logo text-white grid-col-auto flex-auto logo-container" id="extended-logo">
      <em class="usa-logo__text">
        <a href="/" title="Home" aria-label="Home" class='text-white-important usa-logo__text'>VA<span class='text-normal'> | Diffusion Marketplace</span></a>
      </em>
    </div>
  <%# </div> %>
  <nav class="usa-nav grid-col-fill flex-fill nav-container">
      <ul class="usa-nav__primary usa-accordion flex-justify-end">
          <li class="usa-nav__primary-item">
            <a href="/partners" class="text-white-important margin-right-6 partners-link">Partners</a>
          </li>
          <% if user_signed_in? %>
            <li class="usa-nav__primary-item">
              <%= link_to(user_path(current_user), class: 'text-white-important username-link') do %>
                <div class="empty-user-icon image-container display-none-important desktop:display-inline-block text-middle">
                  <i class="fas fa-user fa-lg text-white-important display-none-important desktop:display-inline-block text-middle margin-right-05"></i>
                </div>
                <span class='text-white-important display-inline-block'>
                    <%= current_user.full_name %>
                  </span>
              <% end %>
            </li>
            <% unless ENV['USE_NTLM'] == 'true' %>
<!--              <li class="usa-nav__primary-item">-->
                <%#= link_to('Sign out', destroy_user_session_path, class: 'usa-button-outline-white usa-button sign-out-button', method: :delete) %>
<!--              </li>-->
            <% end %>
          <% else %>
            <li class="usa-nav__primary-item">
              <%= link_to 'Sign in', new_user_session_path, class: 'usa-button usa-button-white sign-in-button', id: 'header-login-link' %>
            </li>
          <% end %>
      </ul>
  </nav>
  </div>
  </div>
  <%= render partial: 'shared/beta_banner' %>
</header>
