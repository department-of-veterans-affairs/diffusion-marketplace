<div class="grid-col-12 desktop:grid-col-4">
  <% if categories.count > 1 %>
    <% categories[column].each do |category| %>
      <%= render partial: 'practices/search_partials/category_checkbox', locals: { category: category } %>
    <% end %>
  <% else %>
    <%= render partial: 'practices/search_partials/category_checkbox', locals: { category: categories.first } %>
  <% end %>
</div>