<section id="crh-show-search">
  <h2 class="font-sans-xl line-height-37px margin-bottom-1">Search in this Clinical Resource Hub</h2>
  <form id="crh-show-search-form" class="usa-form maxw-none margin-bottom-2">
    <fieldset class="usa-fieldset" data-search-filter="false">
      <legend class="usa-sr-only">Search for innovations by CRH</legend>
      <div id="radio-button-group" class="grid-row" role="radiogroup">
        <div class="usa-radio grid-col-4">
          <input class="usa-radio__input crh-created-practices-radio" id="crh-created-practices" type="radio" name="crh-show-radio-buttons" value="created">
          <label class="usa-radio__label margin-bottom-0" for="crh-created-practices">Innovations created here (<%= @practices_created_by_crh.count  %>)</label>
        </div>
        <div class="usa-radio grid-col-4">
          <input class="usa-radio__input crh-adopted-practices-radio" id="crh-adopted-practices" type="radio" name="crh-show-radio-buttons" value="adopted">
          <label class="usa-radio__label margin-bottom-0" for="crh-adopted-practices">Innovations adopted here (<%= @practices_adopted_by_crh.count %>)</label>
        </div>
      </div>

      <div class="grid-row grid-gap-3 display-flex flex-align-end">
        <div class="grid-col-8">
          <div class="usa-search" role="search">
            <label class="usa-sr-only" for="crh-search-field">Search</label>
            <input class="usa-input" id="crh-search-field" type="search" name="search" autocomplete="off">
            <button id="crh-search-button" class="usa-button margin-top-0" type="submit">
              <span class="usa-search__submit-text">Search</span>
            </button>
          </div>
        </div>
        <%= render partial: 'crh_categories_combo_box', locals: { practice_type: 'created', practice_categories: @crh_practices_created_categories } %>
        <%= render partial: 'crh_categories_combo_box', locals: { practice_type: 'adopted', practice_categories: @crh_practices_adopted_categories } %>
      </div>
    </fieldset>
  </form>

  <%= render partial: 'shared/search_sort_select_section', locals: {
      is_crh_show: true,
      sort_options: [
          ['- Select -'],
          ['Sort by most adopted innovations', 'adoptions', class: 'usa-select'],
          ['Sort by A to Z', 'a_to_z', class: 'usa-select'],
          ['Sort by most recently added', 'added', class: 'usa-select']
      ],
      section_id: 'dm-crh-search-practices',
      section_classes: 'display-none',
      first_div_classes: 'grid-row grid-gap-3 margin-bottom-105 flex-align-center',
      second_div_classes: 'grid-col-4'
  }
  %>
  <%= render partial: 'shared/loading_spinner', locals: { display: false, classes: 'dm-crh-search-loading-spinner flex-justify-center flex-align-self-center margin-y-8 desktop:margin-y-10' } %>
  <%= render partial: 'shared/search_no_results', locals: { display_no_query_msg: false } %>
</section>