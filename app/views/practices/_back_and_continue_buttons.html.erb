<%
  editors_path = params[:controller] === 'practices' && params[:action] === 'editors'
  adoptions_path = params[:controller] === 'practices' && params[:action] === 'adoptions'
%>

<% unless editors_path %>
  <%= link_to back_path, class: "dm-button--outline-secondary editor-back-to-link margin-right-1#{' margin-bottom-5' unless NavigationHelper::RETURN_TO_TOP_PAGES.include?(params[:action])} text-no-underline" do %>
    Back
  <% end %>
<% end %>

<%= link_to continue_path, class: "usa-button usa-button--secondary #{editors_path || adoptions_path ? '' : 'continue-and-save'} margin-right-1#{' margin-bottom-5' unless NavigationHelper::RETURN_TO_TOP_PAGES.include?(params[:action])}" do %>
  <%= editors_path || adoptions_path ? 'Continue' : 'Save and continue' %>
<% end %>
