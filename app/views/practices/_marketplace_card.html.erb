 <%
    featured ||= false
    provide(:styles, raw("<style>
    .#{featured ? "featured-" : ''}marketplace-card-header-#{practice.id}  {
      background-size: contain;
      background-repeat: no-repeat;
      background-position: center;
      #{featured ? "height: 309px" : "height: 227px"};
      object-fit: cover;
    }
  </style>"))
  %>
  <%= link_to practice, 'aria-label': "Go to #{practice.name}", 'tabindex': '-1', 'aria-hidden': 'true', class: 'marketplace-card-container link-title' do %>
    <div class="radius-sm border-2px border-base-lightest">
      <% if practice.main_display_image.present? %>
        <div class="<%= featured ? "featured-" : '' %>card-img-container">
          <img alt="<%= practice.name %> Marketplace Card Image" class="img grid-row marketplace-card-img <%= featured ? "featured-" : '' %>marketplace-card-header-<%= practice.id %> radius-top-sm" src="<%= practice.main_display_image_s3_presigned_url(:thumb) %>">
        </div>
      <% else %>
        <div class="bg-base-lightest" style="<%= featured ? 'height: 309px' : 'height: 227px' %>">
          <i class="fas fa-images fa-3x text-base-lighter <%= featured ? 'tall' : '' %>"></i>
        </div>
      <% end %>

      <div class="padding-2 height-card-mobile">
        <%#= link_to practice, class: 'multiline-ellipses-2 margin-bottom-1 link-title' do %>
          <h4 class="grid-col-auto bold font-sans-md practice-title multiline-ellipses-2 margin-bottom-1">
            <%= practice.name %>
          </h4>
        <%# end %>
        <div class="grid-row margin-bottom-1">
          <p class="multiline-ellipses-1 line-height-sans-505 font-sans-sm practice-card-tagline"><%= practice.tagline %></p>
        </div>
        <div class="grid-row p0 flex-align-end">
          <span class="font-sans-3xs multiline-ellipses-3 line-height-sans-205 practice-card-origin-info">
            Created in <%= practice.date_initiated.present? ? date_format(practice.date_initiated) : '(start date unknown)' %> by the <%= facility_name(practice.initiating_facility) %>
          </span>
        </div>
      </div>
    </div>
  <% end %>

