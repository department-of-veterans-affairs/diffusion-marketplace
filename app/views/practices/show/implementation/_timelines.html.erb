<div class="height-05 width-8 border-top-05 border-primary-dark"></div>
<h3 class="margin-top-2 margin-bottom-2 line-height-25px font-sans-lg">Timeline</h3>
<div id="dm-timelines">
  <% @practice.timelines.order(position: :asc).each_with_index do |t, i| %>
    <div class="timeline">
      <div class="bg-white margin-x-3 dm-timeline-icon">
        <i class="fas fa-circle"></i>
        <span class="timeline-number"></span>
      </div>
      <div class="dm-hyphens-auto timeline-and-milestone-container">
        <h5 class="margin-left-9 text-uppercase"><%= t.timeline %></h5>
        <div class="margin-left-6 padding-0 margin-top-1">
          <% mile_stones = t.milestone.split("\r\n") %>
          <% mile_stones.each do |ms|%>
            <div class="margin-left-3 line-height-sans-6">
              <%= ms %>
            </div>
          <% end %>
        </div>
      </div>
    </div>
  <% end %>
</div>
