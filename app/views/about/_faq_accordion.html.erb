<!-- Use the accurate heading level to maintain the document outline -->
<h4 class="usa-accordion__heading usa-prose-h4">
  <button
    class="usa-accordion__button"
    aria-expanded="false"
    aria-controls="faq-<%= item_number %>"
  >
    <%= question %>
  </button>
</h4>
<div id="faq-<%= item_number %>" class="usa-accordion__content usa-prose-body">
  <div><%= sanitize(answer) %></div>
</div>