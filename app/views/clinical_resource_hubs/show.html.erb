<% provide :main_classes, 'bg-gray-2' %>
<% provide :body_classes, 'bg-gray-2' %>
<% provide :footer_classes, 'bg-gray-2' %>

<% visn_number = params["number"]  %>
<% visn_id = @crh.visn_id %>

<% provide :head_tags do %>
  <%= javascript_include_tag '_practice_card_utilities', 'data-turbolinks-track': 'reload' %>
  <%= javascript_tag 'data-turbolinks-track': 'reload' do %>

    <%= render partial: 'crh_show', formats: [:js] %>
    <%# set visnNumber before loading the crh/show file %>
    var visnNumber = <%= visn_number %>;
  <% end %>
  <%= javascript_include_tag 'clinical_resource_hubs/crh_show', 'data-turbolinks-track': 'reload' %>
<% end %>

<% debugger %>

<div id="crh-show" class="grid-container" data-reload="true">
  <section class="usa-section padding-y-0 grid-col-12" id="dm-crh-show">
  <!--  <input type="hidden" id="facility_station_number" value="<%#= @crh.station_number %>"/>-->
    <div class="grid-container position-relative grid-col-12">
      <h1 class="margin-top-0 margin-bottom-3">
        <%= @crh.official_station_name %>
      </h1>
      <div class="grid-row grid-gap-3 margin-bottom-10">
        <div class="grid-col-12 line-height-26"> This Clinical Resource Hub (CRH) serves veterans in <%= @states_str %>. It has created <%= @practices_created_by_crh.count %> innovations and has adopted <%= @practices_adopted_by_crh.count %> innovations.
        </div>
      </div>
    </div>
  </section>
  <%= render partial: 'crh_search' unless @practices_created_by_crh.count == 0 && @practices_adopted_by_crh.count  == 0 %>
</div>
