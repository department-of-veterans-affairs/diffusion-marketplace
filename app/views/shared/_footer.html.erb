<footer class="<%= yield(:footer_classes) %>">
  <%# return to top %>
  <div class="grid-container usa-footer__return-to-top">
    <button class="usa-button--unstyled dm-btn-primary dm-return-to-top">Return to top</button>
  </div>
  <%# footer actions %>
  <div class="bg-base-lightest">
    <div class="grid-container padding-x-0 desktop:padding-y-2">
      <div class="grid-row desktop:margin-x-4">
        <a class="desktop:display-inline-block desktop:grid-col-auto desktop:padding-0 grid-col-12 margin-right-5 padding-y-2 padding-x-2 text-bold dm-footer-link" href="/">
          Home
        </a>
        <a class="desktop:display-inline-block desktop:grid-col-auto desktop:padding-0 desktop:border-top-0 border-top-1px border-base-light grid-col-12 margin-right-5 padding-y-2 padding-x-2 text-bold dm-footer-link" href="/partners">
          Partners
        </a>
        <a class="desktop:display-inline-block desktop:grid-col-auto desktop:padding-0 desktop:border-top-0 border-top-1px border-base-light grid-col-12 margin-right-5 padding-y-2 padding-x-2 text-bold dm-footer-link" target="_blank" href="mailto:dm@agile6.com?subject=<%= URI.encode('Bug report for Diffusion Marketplace') %>&body=<%= URI.encode('Please be sure to include a step-by-step list to reproduce the error, if applicable.') %>">
          Report a bug
        </a>
        <a class="desktop:display-inline-block desktop:grid-col-auto desktop:padding-0 desktop:border-top-0 border-top-1px border-base-light grid-col-12 margin-right-5 padding-y-2 padding-x-2 text-bold dm-footer-link" href="#" class="feedback-survey-popup">
          Send feedback
        </a>
        <a class="desktop:display-inline-block desktop:grid-col-auto desktop:padding-0 desktop:border-top-0 border-top-1px border-base-light grid-col-12 margin-right-5 padding-y-2 padding-x-2 text-bold dm-footer-link" href="<%= nominate_a_practice_path %>" >
          Nominate a practice
        </a>
      </div>
    </div>
  </div>

  <div class="bg-primary-darker text-white padding-y-4">
    <div class="grid-container">
      <div class="grid-row">
        <p class="font-sans-lg margin-0 text-normal">
          <span class="text-bold">VA</span> | Diffusion Marketplace
        </p>
      </div>
    </div>
  </div>
</footer>
