<section class="grid-container margin-top-12 margin-bottom-12 desktop:margin-bottom-8 desktop:margin-top-8" role="region" aria-label="Homepage categories section">
    <div class="dm-homepage-categories-container width-full">
      <h2 class="usa-prose-h2 margin-top-0 margin-bottom-2">Explore popular categories</h2>
      <% total_chars = 0 %>
      <% @popular_categories.each do |pop_cat| %>
        <% if total_chars < 180 %>
            <a class="dm-tag--big--action-primary" href="/search?query=<%= pop_cat %>&cat=" %>
              <%= pop_cat %>
            </a>
          <% total_chars += pop_cat.length %>
        <% end %>
      <% end %>
    </div>
</section>