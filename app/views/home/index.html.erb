  <section class="grid-container banner-links-section">
    <%= link_to '/recommended-for-you', class: 'recommended-for-you-banner-link', 'aria-label': 'Go to recommended for you page', 'tabindex': '-1', 'aria-hidden': 'true' do %>
      <div class="grid-row usa-alert usa-alert--info usa-alert--no-icon recommended-for-you-banner display-flex margin-bottom-5">
        <div class="display-none desktop:display-flex desktop:grid-col-3 flex-justify-center">
          <i class="fas fa-user-circle fa-5x"></i>
        </div>
        <div class="grid-col-10 padding-left-4 desktop:grid-col-6 desktop:padding-left-0">
            <h2 class="usa-prose-h2 font-sans-xl line-height-37px margin-bottom-2 margin-top-0 dm-word-break-break-word dm-hyphens-auto">Recommended for you</h2>
            <p class="line-height-26">Explore practices that are relevant to your location, role, and saved searches.</p>
        </div>
        <div class="grid-col-2 display-flex flex-align-center flex-justify-end padding-right-3 desktop:grid-col-3 desktop:padding-right-5">
          <i class="fas fa-chevron-right fa-2x"></i>
        </div>
      </div>
    <% end %>

    <%= link_to '/covid-19', class: 'covid-banner-link', 'aria-label': 'Go to COVID-19 landing page', 'tabindex': '-1', 'aria-hidden': 'true' do %>
      <div class="grid-row covid-banner display-flex margin-bottom-5">
        <div class="display-none desktop:display-flex desktop:grid-col-3 flex-justify-center desktop:margin-top-105">
          <i class="fas fa-viruses fa-6x"></i>
        </div>
        <div class="grid-col-10 padding-left-3 desktop:grid-col-6 desktop:padding-left-0">
          <h2 class="usa-prose-h2 font-sans-xl line-height-37px margin-bottom-2 margin-top-0">COVID-19</h2>
          <p class="line-height-26">
            The Diffusion Marketplace has practices that help VHA respond to COVID-19. We have assembled a group of practices for frontline staff and administrators responding
            to the changing medical landscape.
          </p>
        </div>
        <div class="grid-col-2 display-flex flex-align-center flex-justify-end padding-right-3 desktop:grid-col-3 desktop:padding-right-5">
          <i class="fas fa-chevron-right fa-2x"></i>
        </div>
      </div>
    <% end %>
  </section>

  <% if @highlighted_pr.present? %>
    <section class="bg-base-lightest margin-bottom-5 padding-x-2 padding-y-5 tablet:padding-x-0 tablet:margin-y-15 dm-highlighted-practice">
      <div class="tablet:grid-container dm-highlighted-practice-content">
        <div class="tablet:grid-col-5 desktop:grid-col-7 dm-highlighted-practice-text">
          <h2 class="margin-top-0 font-sans-xl line-height-37px">
            <%= @highlighted_pr.highlight_title.blank? ? 'Highlighted by the VA this month' : @highlighted_pr.highlight_title %>
          </h2>
          <% if @highlighted_pr.highlight_body %>
            <p class="margin-top-1 line-height-sans-5"><%= @highlighted_pr.highlight_body %></p>
          <% end %>
        </div>
        <div class="margin-top-3 desktop:grid-row desktop:grid-gap-3 dm-highlighted-practice-card tablet:margin-top-0">
          <%= render partial: 'shared/practice_card', locals: { practice: @highlighted_pr } %>
        </div>
      </div>
    </section>
  <% end %>

  <section class="grid-container">
        <div class="desktop:grid-col-7">
          <h2 class="usa-prose-h2 font-sans-xl line-height-37px margin-bottom-2 margin-top-0">Nominate a practice</h2>
          <p class="line-height-26 margin-bottom-2">
            If you have a practice that has been adopted at two or more locations, has been endorsed by a senior executive stakeholder, and is an active practice, click
            the link below to submit it to the Marketplace.
          </p>
          <a class="dm-button--outline-secondary" href="<%= nominate_a_practice_path %>">Start nomination</a>
        </div>
  </section>
</div>
