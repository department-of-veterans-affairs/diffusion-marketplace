<!-- "Practice nav" section -->
<!-- Impact Origin Resources Required Complexity Timeline Risks & Mitigation Support Team -->
<div class="grid-container position-relative z-top">
  <div id="dm-practice-nav" class="z-top mobile-hide">
    <ul id="dm-tabnav" class="usa-sidenav dm-tabnav margin-bottom-1">
      <li class="usa-sidenav__item">
        <a href="#overview" class="dm-tab top-tab scroll-to" data-target="#overview" data-turbolinks="false">Overview</a>
      </li>
      <% unless !@practice.origin_story || !@practice.origin_title %>
        <li class="usa-sidenav__item">
          <a href="#origin" class="dm-tab scroll-to" data-target="#origin" data-turbolinks="false">Origin</a>
        </li>
      <% end %>
      <% if @practice.impact_photos.any? || @practice.video_files.any? || @practice.additional_documents.any? || @practice.publication_files.any? || @practice.publications.any? %>
        <li class="usa-sidenav__item">
          <a href="#impact" class="dm-tab scroll-to" data-target="#impact" data-turbolinks="false">Impact</a>
        </li>
      <% end %>
      <li class="usa-sidenav__item">
        <a href="#resources_required" class="dm-tab scroll-to" data-target="#resources_required" data-turbolinks="false">Resources</a>
      </li>
      <li class="usa-sidenav__item">
        <a href="#complexity" class="dm-tab scroll-to" data-target="#complexity" data-turbolinks="false">Complexity</a>
      </li>
      <% unless @practice.timelines.blank? %>
        <li class="usa-sidenav__item">
          <a href="#timeline_and_checklist" class="dm-tab scroll-to" data-target="#timeline_and_checklist" data-turbolinks="false">Timeline</a>
        </li>
      <% end %>
      <li class="usa-sidenav__item">
        <a href="#risk_and_mitigation" class="dm-tab scroll-to" data-target="#risk_and_mitigation" data-turbolinks="false">Risk
          and
          mitigation</a>
      </li>
      <li class="usa-sidenav__item">
        <a href="#contact" class="dm-tab bottom-tab scroll-to" data-target="#contact" data-turbolinks="false">Contact</a>
      </li>
      <li class="usa-sidenav__item">
        <a href="#comments" class="dm-tab bottom-tab scroll-to" data-target="#comments" data-turbolinks="false">Comments</a>
      </li>
    </ul>
    <div class="text-center">
      <%= link_to 'Take the next step', practice_next_steps_url(practice_id: @practice.slug), id: 'next-steps-link-in-nav', class: 'usa-button width-full' %>
    </div>
  </div>
</div>
<div class="practice-mobile-nav padding-1 z-top desktop:display-none display-flex justify-center">
  <%= link_to 'Take the next step', practice_next_steps_url(practice_id: @practice.slug), id: 'next-steps-link-in-mobile-nav', class: 'usa-button' %>
</div>

<section class="usa-section p2-top p2-bottom">
  <div class="grid-container position-relative">
    <div class="grid-row grid-gap">
      <div class="desktop:grid-col-3 grid-col-auto z-bottom">&nbsp;</div>

      <div id="overview" class="desktop:grid-col-6 grid-col-12 p0">
        <%= render "shared/messages" %>
        <%#<% if current_user&.has_role?(:approver_editor) || current_user&.has_role?(:admin) %>
        <%#  <div class="right">
            <%= link_to 'Edit', edit_practice_path(@practice), class: 'usa-button usa-button--outline' %>
        <%#  </div>
        <% end %>
        <% unless @practice.published && @practice.approved %>
          <div class="usa-alert usa-alert--warning">
            <div class="usa-alert__body">
              <h3 class="usa-alert__heading">This practice will not be shown in the marketplace because it is:</h3>
              <% unless @practice.published %>
                <div class="badge-container un-published-practice">
                  Not Published
                </div>
              <% end %>
              <% unless @practice.approved %>
                <div class="badge-container un-approved-practice">
                  Not Approved
                </div>
              <% end %>
            </div>
          </div>
        <% end %>

        <div class="bg-white<%#padding-5%>">
          <% if @practice.tagline.present? %>
            <h1 class="font-sans-3xl x0-top margin-bottom-2 font-family-sans text-heavy word-break-break-word hyphens-auto">
              <%= @practice.name %>
            </h1>
          <% end %>
          <% if current_user %>
            <div class="margin-bottom-2">
              <a href="<%= practice_favorite_path(@practice, format: :js) %>" data-method="post" data-remote="true" rel="nofollow" aria-label="Favorite <%= @practice.name %>" tabindex="-1" aria-hidden="true" class="favorite-practice-link text-no-underline margin-right-3 font-sans-xs">
                <i class="<% if current_user.favorite_practice_ids.include?(@practice.id) %>fas text-secondary<% else %>far text-primary<% end %> fa-heart favorite-icon-<%= @practice.id %> text-no-underline padding-right-105"></i>
                <span class="text-primary text-no-underline favorite-practice-link-text"><% if current_user.favorite_practice_ids.include?(@practice.id) %>Remove from your favorites<% else %>Add to your favorites<% end %></span>
              </a>
              <a target="_blank" aria-label="Share <%= @practice.name %>" aria-hidden="true" href="mailto:?subject=<%= email_practice_subject(@practice) %>&body=<%= email_practice_body(@practice) %>" class="text-no-underline">
                <span class="text-no-underline text-primary"><i class="fas fa-external-link-alt padding-right-105"></i>Share link</span>
              </a>
            </div>
          <% end %>
          <p class="font-sans-lg line-height-sans-5 margin-bottom-4"><%= @practice.description %></p>
        </div>
        <div <%#class="tablet:grid-col-7 padding-x-1"%>>
          <p class="practice-summary margin-0"><%= @practice.summary %></p>
        </div>
      </div>
      <div class="desktop:grid-col-3 grid-col-auto z-bottom margin-top-8">
        <div class="height-auto padding-2 bg-base-lightest radius-md">
          <h4 class="margin-top-0 margin-bottom-1">Origin</h4>
            <p class="line-height-sans-5 <%= @practice.practice_partners.any? ? 'margin-bottom-3' : '' %>">
              Created by the <%= @facility_data.present? ? @facility_data['properties']['name'] : @practice.initiating_facility %> in <span><%= @practice.date_initiated.present? ? date_format(@practice.date_initiated) : '(start date unknown)' %></span>
            </p>
      <%# <div class="margin-right-2 display-flex-align-items-center">
        <%= render partial: 'shared/badge', locals: {badges: @practice.practice_partners} %>
      <%# </div> %>
            <% if @practice.practice_partners.any? %>
              <h4 class="margin-top-0 margin-bottom-1">Sponsors</h4>
              <div class="<%= @practice.number_adopted.present? ? 'margin-bottom-3' : '' %>">
                <% @practice.practice_partners.each_with_index do |partner, index| %>
                  <p class="line-height-sans-5">
                    <%= partner.name %><%= "," if @practice.practice_partners.size != index + 1 && @practice.practice_partners.size > 2 %>
                    <% concat ('and') if index == @practice.practice_partners.size - 2 && @practice.practice_partners.size >= 2 %>
                  </p>
                <% end %>
              </div>
            <% else %>
              <div class="hidden"></div>
            <% end %>

            <% if @practice.number_adopted.present? %>
              <div>
                <h4 class="margin-top-0 margin-bottom-1">Adoptions</h4>
                <%# <p><%= @practice.number_failed %> <%#unsuccessful</p> %>
                <p class="margin-0 line-height-sans-5">
                  <span><%= @practice.number_adopted.present? ? @practice.number_adopted : '0' %></span>
                  facilit<%= @practice.number_adopted == 1 ? 'y' : 'ies' %> have adopted this practice</p>
              </div>
            <% else %>
              <div class="hidden"></div>
            <% end %>
          </div>
        </div>
      </div>
  </div>
</section>
