<%
  # Views that use this partial must provide the following variable:
  # comment
  #

  new_record = comment.new_record?

  # Optionally, they can also supply the following variables:
  thread ||= new_record ? comment.thread : nil
  no_remote ||= false
%>

<% config = comment.thread.config %>

<% if comment.errors.any? %>
  <div class="error-explanation">
    <h3><%= t "commontator.comment.errors.#{new_record ? 'create' : 'update'}" %></h3>

    <ul>
      <% comment.errors.full_messages.each do |msg| %>
        <li><%= msg %></li>
      <% end %>
    </ul>
  </div>
<% end %>

<%= form_for([commontator, thread, comment], remote: !no_remote) do |form| %>
  <%= form.hidden_field :parent_id %>

  <div class="field">
    <%=
      form.text_area :body, rows: '7', placeholder: 'Type your comment here', 
        class: comment.parent.nil? && new_record ? 'comment-textarea' : '', id: new_record ?
        comment.parent.nil? ? "commontator-thread-#{@commontator_thread.id}-new-comment-body" :
                              "commontator-comment-#{comment.parent.id}-reply" :
        "commontator-comment-#{comment.id}-edit-body"
    %>
    <%= javascript_tag('Commontator.initMentions();') if config.mentions_enabled %>
  </div>

  <div class="submit grid-row flex-align-center">
    <div class="tablet:grid-col-6 text-left">
      <%# Radio buttons go here %>
      <% if new_record %>
        <div>
          <%= radio_button_tag 'user_practice_status', :verified_implementer, false %>
          <%= label_tag '', 'I am currently implementing this practice'%>
        </div>
        <div>
          <%= radio_button_tag 'user_practice_status', :team_member, false %>
          <%= label_tag '', 'I am a member of this practice team' %>
        </div>
      <% end %>
      <% if !new_record %>
        <div>
          <%= radio_button_tag 'user_practice_status', :verified_implementer, current_user.user_practices.find_by(practice_id: comment.thread.id, user: current_user).verified_implementer ? true : false %>
          <%= label_tag '', 'I am currently implementing this practice' %>
        </div>
        <div>
          <%= radio_button_tag 'user_practice_status', :team_member, current_user.user_practices.find_by(practice_id: comment.thread.id, user: current_user).team_member ? true : false %>
          <%= label_tag '', 'I am a member of this practice team' %>
        </div>
      <% end %>

    </div>
    <div class="tablet:grid-col-6">
      <% if config.new_comment_style == :t && new_record && comment.parent.nil? %>
        <%=
          form.submit(
            t('commontator.comment.actions.cancel'), name: 'cancel', class: 'text-bold border-2px padding-y-105 padding-x-2 radius-md text-base-dark comment-cancel',
              id: "commontator-thread-#{@commontator_thread.id}-new-comment-body"
          )
        %>
      <% else %>
        <%=
          form.submit(
            t('commontator.comment.actions.cancel'), name: 'cancel', class: 'text-bold border-2px padding-y-105 padding-x-2 radius-md text-base-dark'
          )
        %>
      <% end %>
        <% if comment.parent %>
          <%= form.submit t("commontator.comment.actions.#{new_record ? 'reply' : 'update'}"), class: 'text-bold border-2px padding-y-105 padding-x-4 radius-md text-primary' %>
        <% else %>
          <%= form.submit t("commontator.comment.actions.#{new_record ? 'create' : 'update'}"), class: "text-bold border-2px padding-y-105 #{comment.parent || !new_record ? 'padding-x-4' : 'padding-x-2'} radius-md text-primary" %>
        <% end %>
    </div>
  </div>
<% end %>
