<%=
  render partial: 'show', locals: {
    user: @commontator_user,
    thread: @commontator_thread,
    comment: @comment,
    page: @commontator_page,
    show_all: @commontator_show_all
  }
%>

$('.timeago').timeago();

<% if @comment.id == @commontator_thread.comments.order('created_at').first.id %>
  Turbolinks.visit('#comments', { action: 'replace' })
<% else %> 
  Turbolinks.visit('#commontator-comment-<%= @comment.id.ord - 1 %>', { action: 'replace' })
<% end %>

<%= javascript_proc %>