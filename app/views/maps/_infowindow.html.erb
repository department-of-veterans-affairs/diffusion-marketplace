<div class="font-sans-sm line-height-sans-1">
  <p class="margin-top-1">
    <%
      station_name = facility.official_station_name
      station_number = facility.station_number
    %>
    <%= link_to "#{station_name} #{ show_common_name(station_name, facility.common_name)}", va_facility_path(facility), class: 'usa-link' %>
  </p>
  <% if home_page ||= false %>
    <p class="margin-top-1"><%= completed %> successful adoption<%= completed == 1 ? '' : 's' %></p>
    <p class="margin-top-1"><%= in_progress %> in-progress adoption<%= in_progress == 1 ? '' : 's' %></p>
    <p class="margin-top-1"><%= unsuccessful %> unsuccessful adoption<%= unsuccessful == 1 ? '' : 's' %></p>
    <button
      type="button"
      onclick="openMarkerModal('homeMapMarkerViewMoreModal-<%= station_number %>')"
      id="homeMapMarkerViewMoreTrigger-<%= station_number %>" data-marker-id="<%= station_number %>"
      class="margin-bottom-2 display-block dm-button--unstyled-primary margin-top-1">
      View more
    </button>
  <% end %>
</div>
