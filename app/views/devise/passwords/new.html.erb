<!-- Forgot your password? Page -->
<div class="margin-top-0">
  <section class="usa-section" style="min-height: calc(100vh - 286px)">
    <div class="grid-container">
      <div class="login-card box-shadow-card">
        <%= render "devise/shared/login_header" %>
        <div class="login-body">
          <h2>Forgot your password?</h2>

          <%= form_for(resource, as: resource_name, url: password_path(resource_name), html: {method: :post, class: 'usa-form margin-top-2'}) do |f| %>
            <% if devise_error_messages!.present? %>
              <div class="usa-alert usa-alert--error" >
                <div class="usa-alert__body">
                  <%= render "devise/shared/error_messages", resource: resource %>
                </div>
              </div>
            <% end %>

            <div class="field">
              <%= f.label :email, class: 'usa-label margin-0 margin-top-2' %><br/>
              <%= f.email_field :email, autofocus: true, autocomplete: "email", class: 'usa-input', required: true %>
            </div>

            <div class="actions display-flex flex-justify-center margin-top-2">
              <%= f.submit "Send me reset password instructions", class: 'usa-button' %>
            </div>
          <% end %>

          <%= render "devise/shared/links" %>
        </div>
      </div>
    </div>
  </section>
</div>
