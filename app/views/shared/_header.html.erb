<header class="usa-header usa-header--extended bg-primary-darker">
  <a class="usa-skipnav" href="#main-content">Skip to main content</a>
  <div class="usa-banner">
    <div class="usa-accordion">
      <div class="usa-banner__header  text-light">
        <div class="usa-banner__inner">
          <div class="grid-col-auto">
            <img class="usa-banner__header-flag" src="<%= image_url 'uswds/us_flag_small.png' %>" alt="U.S. flag">
          </div>
          <div class="grid-col-fill tablet:grid-col-auto">
            <p class="usa-banner__header-text">An official website of the United States government</p>
            <p class="usa-banner__header-action" aria-hidden="true">Here’s how you know</p>
          </div>
          <button id="banner-button" class="usa-accordion__button usa-banner__button"
                  aria-expanded="false" aria-controls="gov-banner">
            <span class="usa-banner__button-text">Here’s how you know</span>
          </button>
        </div>
      </div>
            <div class="usa-banner__content usa-accordion__content" id="gov-banner" hidden>
              <div class="grid-row grid-gap-lg">
                <div class="usa-banner__guidance tablet:grid-col-6">
                  <img class="usa-banner__icon usa-media-block__img" src="<%= image_url 'uswds/icon-dot-gov.svg' %>" alt="Dot gov">
                  <div class="usa-media-block__body">
                    <p>
                      <strong>The .gov means it’s official.</strong>
                      <br>
                      Federal government websites often end in .gov or .mil. Before sharing sensitive information, make sure
                      you’re on a federal government site.
                    </p>
                  </div>
                </div>
                <div class="usa-banner__guidance tablet:grid-col-6">
                  <img class="usa-banner__icon usa-media-block__img" src="<%= image_url 'uswds/icon-https.svg' %>" alt="Https">
                  <div class="usa-media-block__body">
                    <p>
                      <strong>The site is secure.</strong>
                      <br>
                      The <strong>https://</strong> ensures that you are connecting to the official website and that any
                      information you provide is encrypted and transmitted securely.
                    </p>
                  </div>
                </div>
              </div>
            </div>
    </div>
  </div>

  <div class="usa-overlay"></div>

  <div class="usa-navbar bg-primary-darker text-white">
    <div class="usa-logo text-white" id="extended-logo">
      <em class="usa-logo__text">
        <a href="/" title="Home" aria-label="Home" class='text-white-important'>VA<span class='font-normal'> | Diffusion Marketplace</span></a>
      </em>
    </div>
    <button class="usa-menu-btn">Menu</button>
  </div>
  <nav class="usa-nav">
    <div class="usa-nav__inner">
      <button class="usa-nav__close"><img src="<%= image_url 'uswds/close.svg' %>" alt="close"></button>
      <div class="usa-nav__secondary bottom-1-and-half-rem">
        <ul class="usa-nav__secondary-links">
          <li class="usa-nav__secondary-item">
            <a href="/partners" class="text-white-important">Partners</a>
          </li>
          <li class="usa-nav__secondary-item">
            <a href="/practices" class="text-white-important">Practices<span class="usa-sr-only">Practices</span></a>
          </li>
          <% if user_signed_in? %>
            <li class="usa-nav__secondary-item">
                <%= link_to(edit_user_registration_path) do %>
                  <%= image_tag('empty-profile-header.svg', class: 'dm-user') %>
                  <span class='text-white-important'>
                    <%= current_user.full_name %>
                  </span>
                <% end %>
            </li>
            <li class="usa-nav__secondary-item">
              <%= link_to('Logout', destroy_user_session_path, class: 'usa-button usa-button--outline text-white-important', method: :delete) %>
            </li>
          <% else %>
            <li class="usa-nav__secondary-item display-inline-flex vertical-align-middle">
              <div class="display-inline-flex">
                <img src="<%= image_path('tiny_user.svg') %>" alt="user icon"/>
                <%= link_to new_user_registration_path, class: 'dm-font-color-primary-blue padding-left-05' do %>
                  Register
                <% end %>
              </div>
            </li>
            <li class="usa-nav__secondary-item">
              <a class="dm-font-color-primary-blue desktop-show-inline-block" href="#">|</a>
            </li>
            <li class="usa-nav__secondary-item dm-font-color-primary-blue">
              <%= link_to 'Login', new_user_session_path, class: 'usa-button', id: 'header-login-link' %>
            </li>
          <% end %>
        </ul>
      </div>
    </div>
  </nav>
  <%= render partial: 'shared/beta_banner' %>
</header>
