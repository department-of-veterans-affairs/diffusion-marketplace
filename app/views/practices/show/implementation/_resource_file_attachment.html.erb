<h4 class="margin-bottom-2 margin-top-0">Files</h4>
<ul class="usa-list--unstyled margin-bottom-5">
  <% file_attachments.each do |fa| %>
    <div class="margin-bottom-1">
      <% if fa.attachment.present? %>
        <%
          s_name = fa.name.blank? ? fa.attachment_file_name : fa.name
          s_description = fa.description.blank? ? fa.attachment_file_name : fa.description
        %>
        <div class="margin-top-1 width-full line-height-26">
          <li class="small-disc"><%= s_description %> <%= link_to s_name || fa.attachment&.original_filename,
            download_practice_practice_resource_path(
              practice_id: fa.practice_id, 
              id: fa.id,
              resource_type: fa.class.to_s,
            ),
            target: '_blank',
            class: 'usa-link usa-link--external' %>
        </div>
      <% end %>
    </div>
  <% end %>
</ul>
