<% provide :head_tags do %>
    <%= javascript_tag 'data-turbolinks-track': 'reload' do %>
        <%= render partial: 'contact', formats: [:js] %>
    <% end %>
    <%= javascript_include_tag 'practice_editor_contact', 'data-turbolinks-track': 'reload' %>
    <%= javascript_include_tag '_practice_editor_utilities', 'data-turbolinks-track': 'reload' %>
    <%= javascript_include_tag '_cropper', 'data-turbolinks-track': 'reload' %>
<% end %>

<%= render 'breadcrumbs' %>
<%= render 'practice_editor_sidenav' %>
<div class="grid-container position-relative">
    <div class="grid-row grid-gap practice-editor-min-height">
        <div class="desktop:grid-col-3 grid-col-auto z-bottom">&nbsp;</div>

        <div class="desktop:grid-col-9 grid-col-12 p0">
            <%= render partial: "shared/messages", locals: {small_text: false} %>
            <section class="usa-section padding-top-0 p0-bottom contact">
                <h1 class="font-sans-2xl line-height-sans-205">Contact</h1>
                <h2 class="text-normal margin-bottom-2">
                    This section helps people to reach out for support, ask questions, and connect about your practice.
                </h2>

                <%= nested_form_for(@practice, html: { multipart: true, style: 'max-width: 100%', class: 'usa-form', id: 'form'}) do |f| %>
                    <fieldset class="usa-fieldset">
                        <legend class="usa-sr-only">Practice Information</legend>
                        <div>
                            <%= f.label :support_network_email, 'Email:', class: 'usa-label text-bold display-inline-block line-height-26' %>&nbsp;<span class="line-height-26">Type the email address dedicated to responding to messages for this practice. If you haven’t set up a practice’s distro email yet, enter the request under the "Your IT" portal linked on the home screen of your GFE.</span>
                            <%= f.text_field :support_network_email, class: 'usa-input practice-input width-tablet contact-email-input', required: true %>
                        </div>

                        <h2 class="font-sans-xl margin-top-5">Team</h2>

                        <ul class="practice-editor-contact-ul" id="sortable_contacts" role="listbox" aria-label="Practice editor contact list">
                        <%= f.fields_for :va_employees, wrapper: false do |vae| %>
                            <%
                                vae_id = vae.object.id
                                vae_avatar = vae.object.avatar
                                vae_position = vae.object.position
                            %>
                            <li class="practice-editor-contact-li fields" data-id="<%= vae_id %>">
                                <%= vae.hidden_field :id %>
                                <%= vae.hidden_field :position, class: 'contact-position' %>
                                <div class="contact-container padding-205 border border-width-1px border-base-lighter radius-sm margin-top-3 dm-cropper-boundary">
                                <% for attribute in [:crop_x, :crop_y, :crop_w, :crop_h] %>
                                    <%= vae.hidden_field attribute, :id => attribute, :value => nil %>
                                <% end %>
                                    <div class="position-relative">
                                        <div class="fas fa-arrows-alt font-sans-lg position-arrows contact-arrows text-base arrows-tooltip">
                                            <span class="usa-tag tooltip-text">Drag and drop to change order</span>
                                        </div>
                                    </div>
                                    <div>
                                        <%= vae.label :name, 'Name:', class: 'usa-label text-bold display-inline-block vae-name' %>&nbsp;<span>Type the name of the person who created this practice.</span>&nbsp;<span class="text-base-light va-employee-name-character-count" <% if vae_id %> id="va_employee_<%= vae_id %>_name_character_count"<% end %>>(0/50 characters)</span>
                                        <%= vae.text_field :name, class: 'usa-input practice-input width-tablet va-employee-name-input', 'counter-id': "va_employee_#{vae_id}_name" %>
                                    </div>

                                    <div>
                                        <%= vae.label :role, 'Role:', class: 'usa-label text-bold display-inline-block' %>&nbsp;<span>Type their title or position name.</span>&nbsp;<span class="text-base-light va-employee-role-character-count" <% if vae_id %> id="va_employee_<%= vae_id %>_role_character_count"<% end %>>(0/50 characters)</span>
                                        <%= vae.text_field :role, class: 'usa-input practice-input width-tablet va-employee-role', 'counter-id': "va_employee_#{vae_id}_role" %>
                                    </div>

                                    <p class="text-bold headshot-title margin-bottom-05">Headshot&nbsp;<span class="text-base">(optional)</span></p>

                                    <div class="grid-row">
                                        <div class="grid-col-3 headshot-col margin-top-105 margin-right-3">
                                            <div class="dm-cropper-images-container" data-type="contact">
                                            <% if vae_avatar.present? %>
                                                <%= image_tag vae.object.avatar_s3_presigned_url(:original), alt: vae.object.name, class:'dm-cropper-thumbnail-original headshot-img hidden'%>
                                                <%= image_tag vae.object.avatar_s3_presigned_url(:thumb), alt: vae.object.name, class:'dm-cropper-thumbnail-modified headshot-img'%>
                                            <% end %>
                                            </div>
                                            <div class="<%= vae_avatar.present? ? 'headshot-container bg-base-lightest radius-md cropper-image-placeholder hidden' : 'headshot-container bg-base-lightest radius-md cropper-image-placeholder'%>" >
                                                <i class="fas fa-user fa-7x headshot-filler text-base-lighter"></i>
                                            </div>
                                        </div>
                                        <div class="grid-col-8">
                                            <div class="margin-bottom-2">
                                                <p>
                                                  Choose an image that clearly shows a face. Use a high-quality .jpg, .jpeg, or .png files less than 32MB.
                                                </p>
                                            </div>
                                            <div class="margin-bottom-2 dm-image-editor-text hidden">
                                                <p>
                                                    Please click "Save edits" and then "Save your progress" to save and exit editor.
                                                </p>
                                            </div>
                                            <a class="usa-button padding-2 dm-cropper-save-edit hidden" aria-controls='photo-save-edit' aria-expanded='false'>Save edits</a>
                                            <a class="usa-button usa-button--outline padding-2 dm-cropper-cancel-edit hidden" aria-controls='photo-cancel-edit' aria-expanded='false'>Cancel edits</a>
                                            <a class="<%= vae_avatar.present? ? "usa-button usa-button--outline padding-2 dm-cropper-edit-mode" : "usa-button usa-button--outline padding-2 dm-cropper-edit-mode hidden" %>" aria-controls='photo-crop' aria-expanded='false'>Edit photo</a>
                                            <div>
                                                <%= vae.label :avatar, vae_avatar.present? ? 'Upload new photo' : 'Upload photo', class: vae_avatar.present? ? 'dm-cropper-upload-image-label' : 'dm-cropper-upload-image-label usa-button'%>
                                                <%= vae.file_field :avatar, class: "hidden-upload dm-cropper-upload-image", accept: 'image/*' %>
                                            </div>
                                            <div class="dm-cropper-delete-image">
                                                <%= vae.label :delete_avatar, 'Remove photo', class: vae_avatar.present? ? 'display-inline-block text-secondary dm-cropper-delete-image-label' : 'display-inline-block text-secondary dm-cropper-delete-image-label hidden'%>
                                                <%= vae.check_box :delete_avatar, { class: vae_avatar.present? ? 'usa-checkbox__input' : 'usa-checkbox__input hidden'}, 'true', 'false' %>
                                            </div>
                                        </div>
                                        <div class="grid-col-fill flex-align-end trash-container">
                                            <%= vae.link_to_remove '', class: "fas fa-trash-alt va-employee-trash text-no-underline", title: 'Remove contact' %>
                                        </div>
                                    </div>
                                </div>
                            </li>
                        <% end %>
                        </ul>
                        <%= f.link_to_add :va_employees, class: 'fas fa-plus text-no-underline add-va-employee-link' do %>
                            <span class="padding-left-1 font-sans-md text-normal text-no-underline">Add another</span>
                        <% end %>
                        <ul class="trash-can display-none"></ul>
                    </fieldset>
                <% end %>
                <div class="grid-row">
                    <%= link_to practice_overview_path(@practice), class: 'usa-button black usa-button--outline editor-back-to-link margin-right-1 padding-2 text-no-underline' do %>
                        <i class="fas fa-sm text-no-underline margin-right-1"></i>Back
                    <% end %>
                    <%= link_to practice_implementation_path(@practice), class: 'usa-button black pe-continue padding-2 editor-continue-link continue-and-save margin-right-1' do %>
                        Continue<i class="fas fa-sm margin-left-1 text-no-underline"></i>
                    <% end %>
                </div>
            </section>
        </div>
    </div>
</div>