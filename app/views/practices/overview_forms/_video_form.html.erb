<% resource ||= nil
   placeholder ||= 'RANDOM_NUMBER_OR_SOMETHING'
   placeholder = placeholder.to_s + '_video'
   area = area.to_s
%>
<div id="<%= area %>_resource_video_form<%= "_#{placeholder}" if resource %>" <% if resource %> class="resource_container margin-bottom-5" <% end %>>
  <input type="hidden" name="practice[practice_<%= area %>_resources_attributes][<%= placeholder %>][resource_type]" value="video"/>
  <% if resource&.id  %>
    <div class="grid-col-8 margin-bottom-3 margin-x-auto float-left">
      <%= youtube_embed(resource.link_url) %>
    </div>
    <input value="<%= resource&.id %>" type="hidden" name="practice[practice_<%= area %>_resources_attributes][<%= placeholder %>][id]"/>
  <% end %>
  <%= label_tag "practice_#{area}_resources_video", 'Link (paste the full Youtube address)', class: 'usa-label', for: "practice_#{area}_resources_attributes_#{placeholder}_link_url" %>
  <input <%= resource&.id ? 'required' : '' %> class="usa-input" value="<%= resource&.link_url %>"  placeholder="https://www.youtube.com/watch?v=" type="text" name="practice[practice_<%= area %>_resources_attributes][<%= placeholder %>][link_url]" id="practice_<%= area %>_resources_attributes_<%= placeholder %>_link_url" style="width: 643px"/>
  <input type="text" readonly class="overview_error_msg" id="<%= area %>_video_err_message_link_url" value="Please enter a youube url."/>

  <%= label_tag "practice_#{area}_resources_name", 'Caption', class: 'usa-label', for: "practice_#{area}_resources_attributes_#{placeholder}_name" %>
  <input <%= resource&.id ? 'required' : '' %> class="usa-input" value="<%= resource&.name %>" type="text" name="practice[practice_<%= area %>_resources_attributes][<%= placeholder %>][name]" id="practice_<%= area %>_resources_attributes_<%= placeholder %>_name" style="width: 393px"/>
  <input type="text" readonly class="overview_error_msg" id="<%= area %>_video_err_message_name" value="Please enter a caption for the video."/>
  <% if resource %>
    <div class="grid-col-12 trash-container">
      <input type="hidden" value="false" name="practice[practice_<%= area %>_resources_attributes][<%= placeholder %>][_destroy]"/>
      <button type="button" class="usa-button usa-button--unstyled text-red-50 remove_nested_fields">Delete entry</button>
    </div>
  <% else %>
    <div id="cancelAddButtonRow" class="grid-row margin-bottom-2">
      <button type="button" id="cancel_<%= area %>_resource_video" class=" usa-button usa-button--outline dm-btn-primary
              editor-back-to-link margin-right-1  margin-bottom-5 text-no-underline">Cancel</button>

      <button type="button" class="add-resource usa-button usa-button-outline pe-continue
              margin-right-1 margin-bottom-5">Add video</button>
    </div>
  <% end %>
</div>
