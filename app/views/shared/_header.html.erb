<%= render 'shared/usa_banner' %>
<%# source: https://designsystem.digital.gov/components/header/ (basic header) %>
<div class="usa-overlay"></div>
<header class="usa-header usa-header--basic border-bottom">
  <div class="usa-nav-container">
    <div class="usa-navbar">
      <div class="usa-logo">
        <em class="usa-logo__text">
          <a href="/" title="Home" aria-label="Home">
            VA <span class="text-normal"> | Diffusion Marketplace</span>
          </a>
        </em>
      </div>
      <button class="usa-menu-btn">Menu</button>
    </div>
    <nav aria-label="Primary navigation" class="usa-nav">
      <button class="usa-nav__close">
        <img src="<%= image_url 'uswds/close.svg' %>" role="img" alt="close">
      </button>
      <ul class="usa-nav__primary usa-accordion">
        <li class="usa-nav__primary-item">
          <a class="usa-nav__link" href="/competitions/shark-tank">
            <span>Shark Tank</span>
          </a>
        </li>
        <li class="usa-nav__primary-item">
          <a class="usa-nav__link" href="/covid-19">
            <span>COVID-19</span>
          </a>
        </li>
      </ul>
      <%= render 'shared/navbar_search' %>
      <ul class="usa-nav__primary usa-accordion margin-top-0">
        <% if user_signed_in? %>
          <% if ENV['USE_NTLM'] == 'true' %>
            <li class="usa-nav__primary-item">
              <%= link_to('Your profile', user_path(current_user), class: 'usa-nav__link') %>
            </li>
          <% else %>
            <li class="usa-nav__primary-item">
              <button class="usa-accordion__button usa-nav__link" aria-expanded="false" aria-controls="dm-user-profile-options">
                <span>Your Profile</span>
              </button>
              <ul id="dm-user-profile-options" class="usa-nav__submenu">
                <li class="usa-nav__submenu-item">
                  <%= link_to('Profile', user_path(current_user)) %>
                </li>
                <li class="usa-nav__submenu-item">
                  <%= link_to('Sign out', destroy_user_session_path, method: :delete) %>
                </li>
              </ul>
            </li>
          <% end %>
        <% else %>
          <li class="usa-nav__primary-item">
            <%= link_to 'Sign in', new_user_session_path, class: 'usa-nav__link' %>
          </li>
        <% end %>
      </ul>
    </nav>
  </div>
</header>
