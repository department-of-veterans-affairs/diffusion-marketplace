<%= render 'breadcrumbs' %>
<!-- "Practice name" section -->


<!-- Practice hero image section -->

<%= render partial: 'show_unauthenticated' unless current_user.present? %>

<%= render partial: 'show_authenticated' if current_user.present? %>

<% if current_user.present? %>
    <section>
        <div class="grid-container">
            <div class="grid-row grid-gap">
                <div class="desktop:grid-col-3 grid-col-auto z-bottom">&nbsp;</div>
                <div class="desktop:grid-col-9 grid-col-12 p0 p1-5-right">
                    <div>
                        <div class="grid-row flex-align-center margin-bottom-3" id="comments">
                            <h2 id="impact" class="font-sans-xl text-bold margin-0 flex-auto margin-right-205">Comments</h2>
                            <div class="height-2px border border-base-lightest flex-fill"></div>
                        </div>
                        <h4 class="font-body-md">
                            <span id="practice-comment-count">
                              <%= @practice.commontator_thread.comments.count  %>
                            </span>
                          <span id="practice-comment-label">
                            <%= @practice.commontator_thread.comments.count == 1  ? 'comment' : 'comments' %>
                          </span>
                        </h4>
                    </div>
                    <div>
                        <%= commontator_thread(@practice) %>
                    </div>
                </div>
            </div>
        </div>
    </section>
    <div class="grid-container margin-bottom-105">
        <button class="usa-button usa-button--unstyled return-to-top">Return to top</button>
    </div>
<% end %>




