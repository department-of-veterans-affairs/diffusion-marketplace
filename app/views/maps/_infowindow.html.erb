
<div class="font-sans-sm line-height-sans-1">
  <p class="margin-top-1p5"><b><%= facility['OfficialStationName'] %></b></p>
  <% if home_page ||= false %>
    <p class="margin-top-1"><%= completed %> completed implementation<%= completed == 1 ? '' : 's' %></p>
    <p class="margin-top-1"><%= in_progress %> in-progress implementation<%= in_progress == 1 ? '' : 's' %></p>
    <button
      type="button"
      onclick="openMarkerModal('homeMapMarkerViewMoreModal-<%= facility["StationNumber"] %>')"
      id="homeMapMarkerViewMoreTrigger-<%= facility["StationNumber"] %>" data-marker-id="<%= facility["StationNumber"] %>"
      class="margin-bottom-2 display-block text-primary-dark text-underline usa-button--unstyled margin-top-1">
      View more
    </button>
  <% end %>
</div>
