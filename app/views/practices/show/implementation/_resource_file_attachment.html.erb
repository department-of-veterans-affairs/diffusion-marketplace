<h4 class="margin-bottom-2 margin-top-0">Files</h4>
<ul class="usa-list--unstyled margin-bottom-5">
  <% file_attachments.each do |fa| %>
    <div class="margin-bottom-1">
      <% if fa.attachment.present? %>
        <%
          fa.name.length == 0 ? s_name = fa.attachment_file_name : s_name = fa.name
          fa.description.length == 0 ? s_description = fa.attachment_file_name : s_description = fa.description
        %>
        <div class="margin-top-1 width-100 line-height-26">
          <li class="small-disc"><%= s_description %> <%= link_to(s_name || fa.attachment&.original_filename, fa.attachment_s3_presigned_url, target: '_blank', class: 'dm-external-link') %>
        </div>
      <% end %>
    </div>
  <% end %>
</ul>
