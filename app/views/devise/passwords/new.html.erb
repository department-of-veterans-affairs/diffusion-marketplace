<!-- Forgot your password? Page -->
<div class="x0-top">
  <section class="usa-section dm-background-linear-gradient-up-dark-blue" style="min-height: calc(100vh - 286px)">
    <div class="grid-container">
      <div class="login-card box-shadow-card">
        <%= render "devise/shared/login_header" %>
        <div class="login-body">
          <h2>Forgot your password?</h2>

          <%= form_for(resource, as: resource_name, url: password_path(resource_name), html: {method: :post, class: 'usa-form x1-top'}) do |f| %>
            <% if devise_error_messages!.present? %>
              <div class="usa-alert usa-alert--error" >
                <div class="usa-alert__body">
                  <%= devise_error_messages! %>
                </div>
              </div>
            <% end %>

            <div class="field">
              <%= f.label :email, class: 'usa-label x0 x1-top' %><br/>
              <%= f.email_field :email, autofocus: true, autocomplete: "email", class: 'usa-input', required: true %>
            </div>

            <div class="actions display-flex justify-center x1-top">
              <%= f.submit "Send me reset password instructions", class: 'usa-button dm-btn-primary' %>
            </div>
          <% end %>

          <%= render "devise/shared/links" %>
        </div>
      </div>
    </div>
  </section>
</div>
