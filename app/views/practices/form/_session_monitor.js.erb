
let timerId = setInterval(function(){getTimeRemainingForCurrentSession(<%= @practice.id %>, <%= @practice.published %>); }, 25000);

function getTimeRemainingForCurrentSession(practice_id, is_published) {
    Rails.ajax({
        type: 'get',
        url: "/session_time_remaining",
        data: jQuery.param({ practice_id: practice_id}),
        success: function (data) {
            var timeLeft =  data;
            var extendTime = is_published ? '15' : '30';
            if(timeLeft <= 2){
                if (confirm(`Your editing session is about to expire. Choosing 'OK' will extend your session by ${extendTime} minutes.  Choosing 'Cancel' will immediately save your data and end your session.`)){
                    //TODO extend session...
                    Rails.ajax({
                        type: 'get',
                        url: "/extend_editor_session_time",
                        data: jQuery.param({practice_id: practice_id})
                    });
                }
                else{
                    //TODO save... and navigate to Metrics...
                    Rails.ajax({
                        type: 'get',
                        url: "/close_edit_session",
                        data: jQuery.param({practice_id: practice_id, session_ended: true}),
                        success: function(result) {
                            let save_id = document.getElementById('practice-editor-save-button');
                            if(save_id){
                                save_id.click();
                            }
                            else{
                                Rails.ajax({
                                    type: 'get',
                                    url: "/redirect_to_metrics",
                                    data: jQuery.param({practice_id: practice_id, session_ended: true}),
                                });
                            }
                        }
                    });
                }
            }
        }
    });
}
