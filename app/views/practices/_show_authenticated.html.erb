<% end %>

<!-- "Practice content" section -->
<!-- "Impact" section -->
<% if @practice.impact_photos.any? || @practice.video_files.any? || @practice.additional_documents.any? || @practice.publication_files.any? || @practice.publications.any? %>
  <section>
    <div class="grid-container position-relative">
      <div class="grid-row grid-gap">
        <div class="desktop:grid-col-3 grid-col-auto z-bottom">&nbsp;</div>

        <div class="desktop:grid-col-9 grid-col-12 p0">
          <div class="margin-bottom-7">
            <% if @practice.impact_photos.any? %>
              <%= render partial: 'impact' %>
            <% end %>
            <% if @practice.video_files.any? %>
              <%= render partial: 'videos' %>
            <% end %>
