<!-- Login Page -->
<div class='x0-top'>
  <section class="usa-section dm-background-linear-gradient-up-dark-blue" style="min-height: calc(100vh - 286px)">
    <div class="grid-container">
      <div class="login-card box-shadow-card">
        <%= render "devise/shared/login_header" %>
        <div class="login-body">
          <h2>Register</h2>

          <%= render "shared/messages" %>

          <%= form_for(resource, as: resource_name, url: registration_path(resource_name), html: {class: 'usa-form x1-top'}) do |f| %>
            <% if devise_error_messages!.present? %>
              <div class="usa-alert usa-alert--error" >
                <div class="usa-alert__body">
                  <%= devise_error_messages! %>
                </div>
              </div>
            <% end %>

            <div class="usa-alert usa-alert--info" >
              <div class="usa-alert__body">
                <p class="usa-alert__heading" id="email-help">To register, use your @va.gov email address.</p>
              </div>
            </div>

            <%= f.label :email, class: 'usa-label x0 x1-top' %>
            <%= f.email_field :email, autofocus: true, autocomplete: "email", class: 'usa-input', required: true, 'aria-describedby': 'email-help' %>

            <div class="usa-alert usa-alert--info" >
              <div class="usa-alert__body" id="password-help">
                <p class="usa-alert__heading">Password must include 3 of the following:</p>
                <ul>
                  <li>1 uppercase</li>
                  <li>1 lowercase</li>
                  <li>1 digit</li>
                  <li>1 special character</li>
                </ul>
              </div>
            </div>
            <%= f.label :password, class: 'usa-label x0 x1-top' %>
            <%= f.password_field :password, autocomplete: "new-password", class: 'usa-input', required: true, 'aria-describedby': 'password-help' %>

            <%= f.label :password_confirmation, class: 'usa-label x0 x1-top' %>
            <%= f.password_field :password_confirmation, autocomplete: "new-password", class: 'usa-input', required: true %>


            <div class="actions display-flex justify-center x2-top">
              <%= f.submit "Register", class: 'dm-button-primary' %>
            </div>
            <%= render "devise/shared/links" %>
          <% end %>
        </div>
      </div>
    </div>
  </section>
</div>
