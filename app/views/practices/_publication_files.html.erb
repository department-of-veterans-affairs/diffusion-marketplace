<% @practice.publication_files.each do |pf| %>
  <div class="display-flex flex-justify margin-bottom-2 hyphens-auto word-break-break-word">
    <span><%= pf.title.present? ? pf.title : pf.attachment_file_name %></span>
    <span>
      <%= link_to pf.attachment_s3_presigned_url, class: 'dm-font-color-pale-blue', download: pf.attachment_file_name do %>
        <span class="fas fa-download dm-font-color-black"></span> Download (<%= content_type(pf.attachment) %>)
      <% end %>
    </span>
  </div>
<% end %>