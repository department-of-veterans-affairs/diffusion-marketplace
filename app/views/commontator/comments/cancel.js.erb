<% if @comment.nil? || @comment.new_record? %>
  <%
    id = @comment.nil? || @comment.parent.nil? ?
      "commontator-thread-#{@commontator_thread.id}-new-comment" :
      "commontator-comment-#{@comment.parent.id}-reply-link"
  %>
  $("#<%= id %>").hide();
  if ($("#<%= id %>").find('.new_comment')) {
    $("#<%= id %>").html("<%= escape_javascript(
      link_to('Reply',
        commontator.new_thread_comment_path(@commontator_thread, comment: { parent_id: @comment.parent.id }),
        remote: true
      )
    ) %>")
  }



  $("#<%= id %>").fadeIn();
<% else %>
  console.log("<%= id %>")
  $("#<%= id %>").html("<%= escape_javascript(
    render partial: 'body', locals: { comment: @comment }
  ) %>");
<% end %>

<%= javascript_proc %>
