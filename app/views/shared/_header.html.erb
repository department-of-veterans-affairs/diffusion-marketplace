          <li class="usa-nav-secondary-item">
            <a href="/practices/new">Add a Practice</a>
          </li>
          <li class="usa-nav-secondary-item">
            <a href="#"><%= icon('fas', 'search')%><span class="usa-sr-only">Search</span></a>
