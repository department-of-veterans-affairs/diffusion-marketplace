<div class="grid-container position-relative z-top">
    <div id="dm-practice-nav" class="z-top mobile-hide">
        <ul id="dm-tabnav" class="usa-sidenav dm-tabnav margin-bottom-1">
            <li class="usa-sidenav__item">
                <%= link_to 'Instructions', practice_instructions_path(@practice), class: 'dm-tab top-tab editor-sidenav-link' %>
            </li>
            <li class="usa-sidenav__item">
                <%= link_to 'Collaborators', practice_collaborators_path(@practice), class: 'dm-tab editor-sidenav-link' %>
            </li>
            <li class="usa-sidenav__item">
                <%= link_to practice_overview_path(@practice), class: 'width-full dm-tab scroll-to practice-editor-link text-middle display-inline-block editor-sidenav-link' do %>
                    <i class="fas fa-check-circle font-code-lg display-inline-block text-middle padding-right-105 <%= @practice.name && @practice.tagline && @practice.summary && @practice.practice_partners.any? ? 'green-check' : '' %>"></i>Overview
                <% end %>
            </li>
            <li class="usa-sidenav__item">
                <%= link_to practice_origin_path(@practice), class: 'width-full dm-tab scroll-to practice-editor-link text-middle display-inline-block editor-sidenav-link' do %>
                    <i class="fas fa-check-circle font-code-lg display-inline-block text-middle padding-right-105 <%= @practice.origin_story ? 'green-check' : '' %>"></i>Origin
                <% end %>
            </li>
            <li class="usa-sidenav__item">
                <%= link_to practice_impact_path(@practice), class: 'width-full dm-tab scroll-to practice-editor-link text-middle display-inline-block editor-sidenav-link' do %>
                    <i class="fas fa-check-circle font-code-lg display-inline-block text-middle padding-right-105 <%= @practice.impact_photos.any? ? 'green-check' : '' %>"></i>Impact
                <% end %>
            </li>
            <li class="usa-sidenav__item">
                <%= link_to practice_documentation_path(@practice), class: 'width-full dm-tab scroll-to practice-editor-link text-middle display-inline-block editor-sidenav-link' do %>
                    <i class="fas fa-check-circle font-code-lg display-inline-block text-middle padding-right-105 documentation-check"></i>Documentation
                <% end %>
            </li>
            <li class="usa-sidenav__item">
                <%= link_to practice_resources_path(@practice), class: 'width-full dm-tab scroll-to practice-editor-link text-middle display-inline-block editor-sidenav-link' do %>
                    <i class="fas fa-check-circle font-code-lg display-inline-block text-middle padding-right-105 <%= @practice.cost_to_implement_aggregate ? 'green-check' : '' %>"></i>Resources
                <% end %>
            </li>
            <li class="usa-sidenav__item">
                <%= link_to practice_complexity_path(@practice), class: 'width-full dm-tab scroll-to practice-editor-link text-middle display-inline-block editor-sidenav-link' do %>
                    <i class="fas fa-check-circle font-code-lg display-inline-block text-middle padding-right-105 <%= @practice.additional_staffs.any? && @practice.departments.any? && @practice.training_length ? 'green-check' : '' %>"></i>Complexity
                <% end %>
            </li>
            <li class="usa-sidenav__item">
                <%= link_to practice_timeline_path(@practice), class: 'width-full dm-tab scroll-to practice-editor-link text-middle display-inline-block editor-sidenav-link' do %>
                    <i class="fas fa-check-circle font-code-lg display-inline-block text-middle padding-right-105 <%= @practice.timelines ? 'green-check' : '' %>"></i>Timeline
                <% end %>
            </li>
            <li class="usa-sidenav__item">
                <%= link_to practice_risk_and_mitigation_path(@practice), class: 'width-full dm-tab scroll-to practice-editor-link text-middle display-inline-block editor-sidenav-link' do %>
                    <i class="fas fa-check-circle font-code-lg display-inline-block text-middle padding-right-105 risk-miti-check"></i>Risk and mitigation
                <% end %>
            </li>
            <li class="usa-sidenav__item">
                <%= link_to practice_contact_path(@practice), class: 'width-full dm-tab scroll-to practice-editor-link text-middle display-inline-block editor-sidenav-link' do %>
                    <i class="fas fa-check-circle font-code-lg display-inline-block text-middle padding-right-105 <%= @practice.va_employees ? 'green-check' : '' %>"></i>Contact
                <% end %>
            </li>
            <li class="usa-sidenav__item">
                <%= link_to practice_checklist_path(@practice), class: 'width-full dm-tab scroll-to practice-editor-link text-middle display-inline-block editor-sidenav-link' do %>
                    <i class="fas fa-check-circle font-code-lg display-inline-block text-middle padding-right-105"></i>Checklist
                <% end %>
            </li>
        </ul>
        <div class="text-center">
            <%= button_tag 'Save your progress', class: 'usa-button usa-button--outline width-full padding-y-2 margin-top-1', id: 'practice-editor-save-button' %>
        </div>
        <div class="text-center">
            <%= link_to practice_publication_validation_path(@practice), class: 'usa-button width-full padding-y-2 margin-top-1', remote: true, method: :post do %>
                Publish practice
            <% end %>
        </div>
    </div>
</div>