<% if current_user %>
  <%= link_to practice_favorite_path(practice, format: :js), method: :post, remote: true, 'aria-label': "Favorite #{practice.name}", 'tabindex': '-1', 'aria-hidden': 'true', 'class': "#{featured ? "featured-" : ''}favorite-practice-button #{col_4 ? 'col-4-not-featured-favorite-button' : ''}", 'id': "#{featured ? "featured-" : ''}favorite-button-#{practice.id}" do %>
    <i class="<% if current_user.favorite_practice_ids.include?(practice.id) %>fas text-secondary<% else %>far heart-outline<% end %> fa-heart favorite-icon-<%= practice.id %> text-no-underline"></i>
  <% end %>
<% end %>
