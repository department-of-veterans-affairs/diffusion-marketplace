<table class="usa-table usa-table--borderless dm-resource-table margin-bottom-5">
  <thead>
    <tr>
      <th scope="col" class="usa-sr-only">Resource type</th>
      <th scope="col" class="usa-sr-only">Resource description</th>
    </tr>
  </thead>
  <tbody>
  <% people = practice.practice_resources.where(resource_type: "#{resource_type}", media_type: 'resource', resource_type_label: 'people') %>
  <% if people.any? %>
    <tr>
      <th class="font-sans-xs-1 line-height-sans-505 text-top padding-left-0" scope="row">
        <h5 class="margin-top-0">PEOPLE</h5>
      </th>
      <td class="font-sans-xs-1 text-top line-height-sans-505">
        <ul class="padding-left-0 margin-y-0">
          <% people.each do |cp| %>
            <li><%= safe_join(raw(cp.resource).split("\r\n"), tag(:br)) %></li>
          <% end %>
        </ul>
      </td>
    </tr>
  <% end %>
  <% process = practice.practice_resources.where(resource_type: "#{resource_type}", media_type: 'resource', resource_type_label: 'processes') %>
  <% if process.any? %>
    <tr>
      <th class="font-sans-xs-1 line-height-sans-505 text-top padding-left-0" scope="row">
        <h5 class="margin-top-0">PROCESSES</h5>
      </th>
      <td class="font-sans-xs-1 text-top line-height-sans-505">
        <ul class="padding-left-0 margin-y-0">
          <% process.each do |cp| %>
            <li><%= safe_join(raw(cp.resource).split("\r\n"), tag(:br)) %></li>
          <% end %>
        </ul>
      </td>
    </tr>
  <% end %>
  <% tools =  practice.practice_resources.where(resource_type: "#{resource_type}", media_type: 'resource', resource_type_label: 'tools') %>
  <% if tools.any? %>
    <tr>
      <th class="font-sans-xs-1 line-height-sans-505 text-top padding-left-0" scope="row">
        <h5 class="margin-top-0">TOOLS</h5>
      </th>
      <td class="font-sans-xs-1 text-top line-height-sans-505">
        <ul class="padding-left-0 margin-y-0">
          <% tools.each do |ct| %>
            <li><%= safe_join(raw(ct.resource).split("\r\n"), tag(:br)) %></li>
          <% end %>
        </ul>
      </td>
    </tr>
  <% end %>
  </tbody>
</table>
