                        <%= f.text_area :summary, class: 'display-block' %>
                    </div>
                    <p><span class="text-bold">Partners: </span><span>Select any of the following partners your practice is associated with.</span>

                <% end %>
                <div>
                    <%= link_to '' 'example' do %>
                        <div class="usa-button usa-button--outline padding-2"><i class="fas fa-chevron-left fa-sm">&nbsp;&nbsp;</i>Back</div>
                    <% end %>
