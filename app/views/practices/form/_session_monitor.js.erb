
let timerId = setInterval(function(){getTimeRemainingForCurrentSession(<%= @practice.id %>); }, 15000);

function getTimeRemainingForCurrentSession(practice_id) {
    Rails.ajax({
        type: 'get',
        url: "/session_time_remaining",
        data: jQuery.param({ practice_id: practice_id}),
        success: function (data) {
            var timeLeft =  data;
            if(timeLeft <= 2){
                if (confirm("Your editing session is about to expire.  Continue editing?")){
                    //TODO extend session...
                    Rails.ajax({
                        type: 'get',
                        url: "/extend_editor_session_time",
                        data: jQuery.param({practice_id: practice_id})
                    });
                }
                else{
                    //window.location = "/practices/brads-1st-practice/edit/metrics";
                    //TODO save... and navigate to Metrics...
                    Rails.ajax({
                        type: 'get',
                        url: "/close_edit_session",
                        data: jQuery.param({practice_id: practice_id, session_ended: true}),
                        success: function(result) {
                            let save_id = document.getElementById('practice-editor-save-button');
                            if(save_id){
                                save_id.click();
                            }
                            else{
                                Rails.ajax({
                                    type: 'get',
                                    url: "/redirect_to_metrics",
                                    data: jQuery.param({practice_id: practice_id, session_ended: true}),
                                });
                            }
                        }
                    });
                }
            }
        }
    });
}
