<div class="usa-combo-box grid-col-4 practice-<%= practice_type %>-categories-combo-box" data-placeholder="All tags">
  <label for="crh-search-<%= practice_type %>-categories" class="line-height-26">Tags</label>
  <select id="crh-search-<%= practice_type %>-categories" class="usa-select" name="crh-search-<%= practice_type %>-categories">
      <% practice_categories.each do |ct| %>
        <option value="<%= ct.name %>">
          <%= ct.name %>
        </option>
      <% end %>
  </select>
</div>