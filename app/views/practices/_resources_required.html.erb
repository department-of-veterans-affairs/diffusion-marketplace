<div class="grid-container-full margin-bottom-6">
  <div class="grid-row">
    <div class="tablet:grid-col-6 text-center">
      <h3 id="resources_required" class="font-sans-xl text-bold margin-0">Resources Required</h3>
    </div>
  </div>
  <div class="grid-row">
    <!-- Cost level Circle -->
    <div class="order-first grid-row flex-column flex-align-center flex-justify-center level-aggregate-circle <%= level_aggregate_style(@practice.cost_to_implement_aggregate) %>">
      <div class="tablet:grid-col-12 margin-y-2">
        <% cost_to_implement_aggregate = @practice.cost_to_implement_aggregate || 0 %>
        <% (0..3).each do |index| %>
          <% if index < cost_to_implement_aggregate %>
            <i class="fas fa-dollar-sign large-icon-dark aggregate-icon"></i>
          <% else %>
            <i class="fas fa-dollar-sign large-icon-light aggregate-icon"></i>
          <% end %>
        <% end %>
      </div>
      <div class="grid-auto">
        <h4 class="margin-0 fw-100">
          Cost
          <span class="sr-only">
            <%= pluralize(cost_to_implement_aggregate, 'dollar')%>
            out of four.
          </span>
        </h4>
      </div>
    </div>
    <div class="tablet:grid-col-6 text-center tablet:display-none">
      <p><%= cost_aggregate_description(@practice.cost_to_implement_aggregate) %></p>
    </div>
    <div class="tablet:grid-col-6 display-flex flex-column">
      <% @practice.costs.each do |cost| %>
        <p class="text-bold font-ui-md"><%= cost.description %></p>
      <% end %>
    </div>
  </div>
  <div class="grid-row tablet:display-block display-none">
    <div class="tablet:grid-col-6 text-center">
      <p><%= cost_aggregate_description(@practice.cost_to_implement_aggregate) %></p>
    </div>
  </div>
</div>


<div class="grid-container-full">
  <div class="grid-row">
    <div class="tablet:grid-col-6 text-center">
      <h3 id="complexity" class="font-sans-xl text-bold margin-0">Complexity</h3>
    </div>
  </div>
  <div class="grid-row ">
    <!-- Complexity level Circle -->
    <% complexity_aggregate = complexity_aggregate(@practice) || 0 %>
    <div class="grid-row flex-column flex-align-center flex-justify-center level-aggregate-circle <%= level_aggregate_style(complexity_aggregate) %>">
      <div class="tablet:grid-col-12 margin-y-2">

        <% (0..3).each do |index| %>
          <% if index < complexity_aggregate %>
            <i class="fas fa-wrench large-icon-dark aggregate-icon"></i>
          <% else %>
            <i class="fas fa-wrench large-icon-light aggregate-icon"></i>
          <% end %>
        <% end %>
      </div>
      <div class="grid-auto">
        <h4 class="margin-0 fw-100">
          Complexity
          <span class="sr-only">
            <%= pluralize(complexity_aggregate, 'wrench')%> 
            out of four.
          </span>
        </h4>
      </div>
    </div>

    <div class="tablet:grid-col-6 text-center tablet:display-none">
      <p><%= complexity_aggregate_description(complexity_aggregate) %></p>
    </div>

    <div class="tablet:grid-col-6 display-flex flex-column">
      <% @practice.difficulties.each do |difficulty| %>
        <% if difficulty.description.present? %>
          <h3><%= difficulty.description %></h3>
        <% end %>
      <% end %>
    </div>
  </div>

  <div class="grid-row tablet:display-block display-none">
    <div class="tablet:grid-col-6 text-center">
      <p><%= complexity_aggregate_description(complexity_aggregate) %></p>
    </div>
  </div>
</div>
